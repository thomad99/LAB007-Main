{
  "_comment_fonts": [
    "font_name uses pygame SysFont names (depends on installed fonts).",
    "Common good ones: null (default), 'dejavusans', 'dejavusansmono',",
    "'freesans', 'arial', 'verdana', 'tahoma', 'liberationsans'.",
    "To list fonts on the Pi run:",
    "python3 -c \"import pygame; pygame.init(); print(sorted(pygame.font.get_fonts())[:200])\""
  ],
  "font_list": ["dejavusans", "dejavusansmono", "freesans", "arial", "verdana", "tahoma", "liberationsans"],
  "color_palette": {
    "plain": {
      "White": [255, 255, 255],
      "Black": [0, 0, 0],
      "Gray": [128, 128, 128],
      "Red": [255, 0, 0],
      "Orange": [255, 165, 0],
      "Amber": [255, 170, 90],
      "Yellow": [255, 255, 0],
      "Green": [0, 255, 0],
      "Blue": [0, 0, 255],
      "Purple": [128, 0, 128]
    },
    "neon": {
      "Neon Green": [57, 255, 20],
      "Neon Blue": [0, 255, 255],
      "Neon Pink": [255, 0, 255],
      "Neon Yellow": [255, 255, 0],
      "Neon Orange": [255, 128, 0],
      "Neon Cyan": [0, 255, 255],
      "Neon Lime": [191, 255, 0],
      "Neon Red": [255, 51, 51]
    }
  },

  "mode": "news_feed",
  "rotate": "left",
  "refresh_seconds": 15,

  "clock_basic": {
    "format": "%H:%M:%S",
    "font_name": "dejavusans",
    "font_size": 220,
    "bold": true,
    "color_rgb": [255, 170, 90],
    "bg_rgb": [0, 0, 0]
  },

  "slideshow": {
    "folder": "images",
    "seconds_per_slide": 6,
    "shuffle": true,
    "fit": "cover",
    "clock": {
      "enabled": true,
      "layout": "center",
      "format": "%H:%M",
      "font_name": "dejavusans",
      "font_size": 140,
      "bold": true,
      "color_rgb": [255, 255, 255]
    }
  },

  "nixie_clock": {
    "folder": "nixie",
    "scale": 1,
    "show_seconds": true
  },

  "flip_clock": {
    "format": "%H:%M:%S",
    "fps": 45,
    "flip_ms": 450
  },

  "analog_clock": {
    "show_numbers": true,
    "show_ticks": true,
    "smooth_seconds": true
  },

  "video_player": {
    "folder": "video",
    "loop_first": false,
    "audio": "on",
    "volume": 70,
    "shuffle": false
  },

  "web_images": {
    "manifest_url": "https://www.lab007.ai/tomopi/images/images.json",
    "index_url": "https://www.lab007.ai/tomopi/images/",
    "seconds_per_slide": 6,
    "refresh_list_seconds": 300,
    "transition": "fade",
    "fade_ms": 450,
    "shuffle": true,
    "fit": "contain",
    "cache_dir": "web_cache"
  },

  "news_feed": {
    "rss_feeds": [
      "https://feeds.bbci.co.uk/news/rss.xml"
    ],
    "max_headlines": 10,
    "transition": "slide_left",
    "transition_ms": 450,
    "tickers": ["TSLA", "IBRX"],

    "item_seconds": 10,
    "refresh_news_seconds": 600,
    "refresh_stocks_seconds": 240,

    "clock_font_name": "dejavusans",
    "clock_font_size": 270,
    "text_font_name": "dejavusans",
    "text_font_size": 60,

    "clock_color_rgb": [191, 255, 0],
    "text_color_rgb": [191, 255, 0],
    "bg_rgb": [0, 18, 0]
  }
}
